<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ipInputWeatherTxt"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ipInputWeatherTxt"
        android:layout_marginTop="24dp"
        android:text="Enter Weather Station IP Address  and Temperature Threshhold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ipInputWeatherTxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="23dp"
        android:hint="IP Address"
        android:padding="10dp"
        android:textColor="#FFE21A1A"
        android:textColorLink="#FFE01515" />

    <EditText
        android:id="@+id/tempMaxThreshHold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ipInputWeatherTxt"
        android:layout_alignLeft="@+id/ipInputWeatherTxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ipInputWeatherTxt"
        android:layout_alignStart="@+id/ipInputWeatherTxt"
        android:layout_below="@+id/ipInputWeatherTxt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        android:hint="Max Temperature Threshhold"
        android:padding="10dp"
        android:textColor="#FFE21A1A"
        android:textColorLink="#FFE01515" />

</RelativeLayout>